package day04;

public class TestProduct {

	public static void main(String[] args) {
		Product[] products = new Product[100];
		
		int count = 0;
		
		products[count++] = new Product("냉장고",100,"삼성");
		products[count++] = new Product("세탁기",100,"LG");
		products[count++] = new Product("김치냉장고",100,"만도");
		
		System.out.println("초기값");
		
		for(int i=0;i<count;i++) {
			products[i].printInfo();
		}
		String pName = "김치냉장고";
		int findIndex = -1;
		
		for(int i=0;i<count;i++) {
			Product p = products[i];
			
			if(p.getName() == pName) {
				findIndex = i;
				break;
			}
		}
		
		if(findIndex == -1) {
			System.out.println("검색실패");
		}else {
			System.out.println(pName + findIndex);
			products[findIndex].setPrice(150);
		}
		
		System.out.println("수정");
		
		for(int i=0;i<count;i++) {
			products[i].printInfo();
		}
		
		pName = "세탁기";
		findIndex = -1;
		
		for(int i=0;i<count;i++) {
			Product p = products[i];
			
			if(p.getName() == pName) {
				findIndex = i;
				break;
			}
		}
		
		if(findIndex == -1) {
			System.out.println("검색실패");
		}else {
			System.out.println(pName + findIndex);
			products[findIndex] = products[count-1];
			products[count-1] = null;
			count--;
			
		}
		
		System.out.println("삭제");
		
		for(int i=0;i<count;i++) {
			products[i].printInfo();
		}
		
		
	}

}
