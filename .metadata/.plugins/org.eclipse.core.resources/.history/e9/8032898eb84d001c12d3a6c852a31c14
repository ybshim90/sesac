package day04;

public class 객체배열 {

	public static void main(String[] args) {
//		Movie m1 = new Movie("지옥","연상호",300);
//		Movie m2 = new Movie("오징어","황동혁",200);
		
		Movie[] movies = new Movie[100];
		int count = 0;
		movies[count++] = new Movie("지옥","연상호",300);
		
		movies[count++] = new Movie("오징어","황동혁",200);
		
		movies[count++] = new Movie("유체이탈자","윤재근",100);
		
		for(int i=0;i<count;i++) {
			movies[i].printInfo();
		}
		
		for(int i=0;i<count;i++) {
			Movie m = movies[i];
			
			if(m.getTitle() == "오징어") {
				System.out.println("번호:"+i);
			}
		}
		String movieTitle = "유체이탈자";
		int findIndex = -1;
		for(int i=0;i<count;i++) {
			Movie m = movies[i];
			
			if(m.getTitle() == movieTitle) {
//				System.out.println("번호:"+i);
//				m.setCost(150);
				findIndex = i;
				break;
			}
		}
		
		if(findIndex == -1) {
			System.out.println("검색실패");
		}else {
			System.out.println(movieTitle + findIndex);
			movies[findIndex].setCost(150);
		}
		
		movieTitle = "오징어";
		
		findIndex = -1;
		for(int i=0;i<count;i++) {
			Movie m = movies[i];
			
			if(m.getTitle() == movieTitle) {
				findIndex = i;
				break;
			}
		}
		
		if(findIndex == -1) {
			System.out.println("검색실패");
		}else {
			System.out.println(movieTitle + findIndex);
			movies[findIndex] = movies[count-1];
			movies[count-1] = null;
			count--;
		}
		
	}

}
